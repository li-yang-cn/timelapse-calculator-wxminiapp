.functions {
    margin: 30rpx;
}

section {
    margin-bottom: 20rpx;
}

label {
    display: block;
    margin-bottom: 10rpx;
    font-size: 30rpx; /* 正文字体 */
}

input {
    width: 100%;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.result {
    margin-top: 20rpx;
    font-size: 30rpx;
}

button {
    background-color: #444444;
    color: #dddddd;
    border: none;
    border-radius: 10rpx;
    font-size: 32rpx; /* 按钮字体 */
}

.emoji {
    margin-top: 30rpx;
    width: 100rpx;
    height: 100rpx;
}

.title {
    font-size: 36rpx; /* 标题字体 */
    font-weight: bold;
}

.reset {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.row {
    display: flex;
    align-items: center;
    margin: 15rpx;
}

.buttons {
    display: flex;
}

.icon {
    flex: 1;
    text-align: left;
}

.label {
    flex: 10 2 10%;
    text-align: left;
    font-size: 30rpx;
}

.input,
.picker {
    flex: 8 5 20%;
    text-align: right;
    font-size: 30rpx;
}

.unit {
    flex: 1;
    text-align: left;
    font-size: 30rpx;
}

.tips {
    margin-top: 20rpx;
    text-align: center;
    font-size: 24rpx; /* 辅助提示字体 */
}

.history {
    margin-top: 20rpx;
    padding: 20rpx;
    text-align: center;
    font-size: 30rpx;
}

.history-title {
    margin-bottom: 10rpx;
    font-size: 36rpx; /* 标题字体 */
    font-weight: bold;
}

.table-header,
.table-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 16rpx 0;
    font-size: 30rpx;
}

.table-cell {
    text-align: center;
    padding: 0 8rpx;
    font-size: 30rpx;
    white-space: nowrap;           /* 防止换行 */
    text-overflow: ellipsis;       /* 显示省略号（可选） */
    flex: 1;                        /* 或者 flex-basis: 16.6% 给每列均分宽度 */
}

.history-list {
    display: flex;
    flex-direction: column;
}